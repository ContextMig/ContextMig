<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="me.writeily" platformBuildVersionCode="25" platformBuildVersionName="7.1.1">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:allowBackup="true" android:debuggable="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="me.writeily.MainActivity"/>
        <activity android:label="@string/app_name" android:name="me.writeily.NoteActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <action android:name="android.intent.action.EDIT"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain" android:scheme="file"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/x-markdown" android:scheme="file"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:host="*" android:mimeType="*/*" android:pathPattern="*.markdown" android:scheme="file"/>
                <data android:host="*" android:mimeType="*/*" android:pathPattern="*.md" android:scheme="file"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/preview" android:name="me.writeily.PreviewActivity"/>
        <activity android:label="@string/action_settings" android:name="me.writeily.settings.SettingsActivity" android:parentActivityName="me.writeily.MainActivity" android:theme="@style/AppTheme.Light"/>
        <activity android:label="@string/app_name" android:name="me.writeily.PinActivity"/>
        <activity android:label="@string/app_name" android:name="me.writeily.AlphanumericPinActivity"/>
        <activity android:label="@string/app_name" android:name="me.writeily.PromptPinActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="me.writeily.widget.WidgetConfigure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <receiver android:name="me.writeily.widget.WriteilyWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/writeily_widget"/>
        </receiver>
        <service android:name="me.writeily.widget.FilesWidgetService" android:permission="android.permission.BIND_REMOTEVIEWS"/>
        <meta-data android:name="android.support.VERSION" android:value="25.4.0"/>
    </application>
</manifest>
